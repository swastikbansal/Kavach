<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Kavach.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Kavach.AppWidgetContainer">

    <ImageButton
        android:id="@+id/appwidget_imgbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="2dp"
        android:padding="2dp"
        android:scaleType="centerInside"
        android:src="@drawable/kavachidget"
        android:contentDescription="@string/app_widget_description"
        android:textSize="16sp"
        android:textStyle="bold|italic" />
</RelativeLayout>