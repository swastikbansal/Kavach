<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1f2328"
    tools:context=".ui.home.HomeFragment">

    <ImageButton
        android:id="@+id/SOSButton"
        android:layout_width="303dp"
        android:layout_height="294dp"
        android:layout_marginTop="60dp"
        android:contentDescription="@string/sos_image"
        android:onClick="SOS"
        android:src="@drawable/logo6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/EmergencyContactButton"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/custom_button"
        android:onClick="EmergencyContactsActivity"
        android:drawableRight="@drawable/baseline_keyboard_double_arrow_right_24"
        android:paddingStart="30dp"
        android:text="@string/emergency_contacts"
        android:textAlignment="center"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/VoiceRecognitionButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.379"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SOSButton"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/VoiceRecognitionButton"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:textAllCaps="false"
        android:onClick="VoiceRecogntionActivity"
        android:background="@drawable/custom_button"
        android:drawableRight="@drawable/baseline_keyboard_double_arrow_right_24"
        android:paddingStart="30dp"
        android:text="@string/voice_recognition"
        app:layout_constraintBottom_toTopOf="@+id/LockScreenButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EmergencyContactButton"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/LockScreenButton"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:onClick="LockScreenActivity"
        android:drawableRight="@drawable/baseline_keyboard_double_arrow_right_24"
        android:paddingStart="30dp"
        android:text="@string/lock_screen"
        android:background="@drawable/custom_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAllCaps="false"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/VoiceRecognitionButton"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/alata"
        android:textAlignment="center"
        android:textColor="#EF0707"
        android:textColorHighlight="#AD1457"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.412" />
</androidx.constraintlayout.widget.ConstraintLayout>