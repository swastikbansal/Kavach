#:kivy 2.2.1
WidgetExample:

<WidgetExample>:
    cols : 2
    Button:
        text: "Click Here"
        on_press : root.on_button_click()
    Label:
        text : "Hello"

<PageLayoutExample@PageLayout>:
    MainWidget:
    BoxLayoutExample:
    AnchorLayoutExample:
    GridLayoutExample:
    StackLayoutExample:

<ScrollViewExample@ScrollView>:
    StackLayoutExample:
        size_hint : 1, None
        height : self.minimum_height

<StackLayoutExample>:
    #left - right & top - bottom
    # orientation : "lr-tb"
    # padding : ("20dp","20dp","20dp","20dp")
    # spacing : "20dp","20dp"

<GridLayoutExample@GridLayout>:
    rows : 3
    cols : 2
    Button:
        text:"A"
        size_hint : None,1
        width : "50dp"
    BoxLayoutExample
    Button:
        text:"C"
        size_hint : None,1
        width : "50dp"
    Button:
        text:"D"
        
    Button:
        text:"E"
        size_hint : None,1
        width : "50dp"
    Button:
        text:"F"


<AnchorLayoutExample>:
    #left,right,centre
    anchor_x : "left"

    #top,bottom,centre
    anchor_y : "top"

    BoxLayout:
        size_hint : .2, .2

        Button:
            text: "A"
            
        Button:
            text: "B"
            


<BoxLayoutExample>:
    orientation: "horizontal"
    Button:
        text: "A"
        size_hint : 0.8,0.7
        pos_hint : {"top" : 0.98}

    BoxLayout:
        orientation:"vertical"
        Button:
            text: "B1"
        Button:
            text: "B2"
        Button:
            text: "B3"
    
    Label:
        text: "c"

    


#Code for Main Widget 
<MainWidget>:
    Button:
        text: "Hello"
        size: "300dp","200dp"
        pos: "200dp","320dp"
